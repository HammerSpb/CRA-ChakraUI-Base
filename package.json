{
  "name": "raffle",
  "version": "1.0.0",
  "private": true,
  "dependencies": {
    "@chakra-ui/react": "^2.2.3",
    "@emotion/react": "^11.9.3",
    "@emotion/styled": "^11.9.3",
    "@types/jest": "^25.2.3",
    "@types/node": "^12.20.55",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "framer-motion": "^6.4.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^3.11.0",
    "react-scripts": "5.0.1",
    "typescript": "^4.7.4",
    "web-vitals": "^0.2.4"
  },
  "scripts": {
    "prepare": "husky install",
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test --watchAll=false --runInBand",
    "test:watch": "react-scripts test --watchAll=true",
    "test:ci": "react-scripts test --reporters=jest-junit --watchAll=false --runInBand",
    "eject": "react-scripts eject",
    "lint:es": "eslint --ext src/**/*.ts{,x}",
    "lint:es:fix": "eslint --ext src/**/*.ts{,x} --fix",
    "lint:ts": "tsc --noEmit",
    "format": "prettier --write src/**/*.ts{,x}",
    "format:check": "prettier --check src/**/*.ts{,x}",
    "pre-commit": "lint-staged",
    "pre-push": "lint-staged"
  },
  "husky": {
    "hooks": {
      "pre-push": "lint-staged",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.(ts|tsx)": [
      "tsc --noEmit",
      "eslint --cache --fix",
      "prettier --write"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "engines": {
    "npm": ">=6.0.0",
    "node": ">=16.0.0 <17"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.3.0",
    "@testing-library/user-event": "^14.2.1",
    "@typescript-eslint/eslint-plugin": "^5.30.6",
    "@typescript-eslint/parser": "^5.30.6",
    "eslint": "^8.19.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.2.5",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.5.3",
    "eslint-plugin-jsx-a11y": "^6.6.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "^7.30.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.1",
    "jest-junit": "^14.0.0",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1"
  }
}

